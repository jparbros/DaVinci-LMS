= widget_div do

  = breadcrumb('Management', 
    link_to('Users', management_users_path), 
    link_to('New User', new_management_user_path))

  == info_message(@message)
      
  = semantic_form_for user, remote: true, url: url_for_event(:submit), :html => {class: 'form-horizontal'} do |f|
    = f.semantic_errors
    = f.inputs 'New User' do
      = f.input :first_name, placeholder: 'Gonzalo', input_html: {class: 'row-fluid', autofocus: "autofocus"}
      = f.input :last_name, placeholder: 'Rodr√≠guez', input_html: {class: 'row-fluid'}
      = f.input :dni, label: 'DNI', input_html: {class: 'row-fluid'}
      = f.input :email, input_html: {class: 'row-fluid'}
    = f.actions do
      = f.action :submit, label: 'Save new student', button_html: { disable_with: "Please wait..." }