= widget_div do

  = breadcrumb(t(:management), link_to(t(:courses), management_courses_path), link_to("#{course.abbreviation}", management_course_path(course.id)))
  
  == display_alert(@message)
  
  = semantic_form_for course, remote: true, url: url_for_event(:submit, :course_id => course.id), :html => {:class=>'form-horizontal'} do |f|
    = f.semantic_errors
    = f.inputs course.full_name do
      = f.input :full_name, :placeholder => 'Introduction to computer Science', :input_html => {:class=>'row-fluid'}
      = f.input :abbreviation, :placeholder => 'CS-101', :input_html => {:class=>'row-fluid'}
      = f.input :description, :as => 'text', input_html: {rows: 4, :class=>'row-fluid' }
    = f.actions do
      = f.action :submit, button_html: { disable_with: "Please wait..." }