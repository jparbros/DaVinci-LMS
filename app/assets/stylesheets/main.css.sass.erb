.navbar-inner
  border-radius: 0px

html
  overflow-y: scroll

body
  background-color: #98cad0

.table tbody tr:hover td, .table tbody tr:hover th
  background-color: #e8e8e8

.site-width
  max-width: 920px
  margin: 0 auto

.breadcrumb li
  margin: 0 1px

.title
  display: block
  width: 100%
  padding: 0
  margin-bottom: 20px
  font-size: 19.5px
  line-height: 36px
  color: #333
  border: 0
  border-bottom: 1px solid #EEE

  span, a
    padding-right: 15px

.management_form
  .btn
    margin-right: 20px
  .alert
    display: inline-block

.table-bordeless
  td
    border: 0
    
a.destroy-link
  color: #d44944
a.destroy-link:hover
  color: #ba352e
  
.nav .nav-header
  color: #333

.nav-tabs > li
  margin-left: 10px
  
.nav-tabs.nav-stacked li a
  border: 0

textarea
  resize: vertical

.modal form
  margin: 0
  
i
  padding: 0 4px 0 0