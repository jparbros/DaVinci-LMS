.navbar-inner
  border-radius: 0px

html
  overflow-y: scroll

body
  background-color: #98cad0
  
.section
  margin-bottom: 30px

.table tbody tr:hover td, .table tbody tr:hover th
  background-color: #e8e8e8

.site-width
  max-width: 920px
  margin: 0 auto

.breadcrumb li
  margin: 0 1px

.title
  display: block
  width: 100%
  padding: 0
  margin-bottom: 20px
  font-size: 19.5px
  line-height: 36px
  color: #333
  border: 0
  border-bottom: 1px solid #EEE

  > span, > a
    padding-right: 15px  
  i
    padding: 0 11px 0 0
  .nav
    margin-bottom: 0
    margin-right: 10px
    display: inline-block    
    .dropdown-menu 
      margin-top: 6px
      li
        font-size: initial
    > li > a:hover
      background-color: transparent

.management_form
  .btn
    margin: 0 20px 0 20px
  .alert
    display: inline-block

.table-bordeless
  td
    border: 0
    
a.destroy-link
  color: #d44944
a.destroy-link:hover
  color: #ba352e
  
.nav .nav-header
  color: #333

.nav-tabs > li
  margin-left: 10px
  
.nav-tabs.nav-stacked li a
  border: 0

textarea
  resize: vertical

.modal form
  margin: 0
  
i
  padding: 0 4px 0 0
  
.link_to_show_more
  padding-right:  10px